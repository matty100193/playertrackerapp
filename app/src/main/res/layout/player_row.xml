<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tr_row"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#c9fad7d7"
    android:paddingLeft="10dp"
    android:divider="#121212">


    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Theo Walcott"
            android:id="@+id/name_txt"
            android:textColor="#121212"
            android:textSize="18sp"
            android:maxLines="1"
            android:maxLength="30"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/agetxt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Age: "
            android:id="@+id/agetxt"
            android:layout_marginEnd="55dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Position"
            android:id="@+id/textView2"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/matchesTxt"
            android:layout_alignEnd="@+id/name_txt"
            android:layout_marginEnd="87dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Matches:"
            android:id="@+id/matchesTxt"
            android:layout_alignTop="@+id/agetxt"
            android:layout_alignStart="@+id/agetxt"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Goals:"
            android:id="@+id/textView4"
            android:layout_below="@+id/name_txt"
            android:layout_alignStart="@+id/matchesTxt"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="3dp" />

        <View android:layout_width="match_parent"
            android:background="#121212"
            android:layout_height="2dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</TableRow>